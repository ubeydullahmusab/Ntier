@using DL.Models
@model Kisi

<form method="post" asp-controller="Kisi" asp-action="Update" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">KİŞİ GÜNCELLE</h5>
                </div>
                <div class="card-body">
                    <input type="text" name="adı" class="form-control" value="@Model.Adı" placeholder="Adı">
                </div>
                <div class="card-body">
                    <input type="text" name="soyadı" class="form-control" value="@Model.Soyadı" placeholder="Soyadı">
                </div>
                <div class="card-body">
                    <input type="text" name="cinsiyet" class="form-control" value="@Model.Cinsiyet" placeholder="Cinsiyet">
                </div>
                <div class="card-body">
                    <div class="mb-3 text-sm-end">

                        <button class="btn btn-secondary" type="submit">Güncelle</button>

                    </div>
                </div>

            </div>

        </div>


    </div>

</form>